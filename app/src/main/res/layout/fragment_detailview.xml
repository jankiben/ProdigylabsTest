<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detailview_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/fragment_detailview_img_potrait"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_detailview_main"
        app:layout_constraintRight_toRightOf="@+id/fragment_detailview_main"
        app:layout_constraintTop_toTopOf="@+id/fragment_detailview_main" />

    <ImageView
        android:id="@+id/fragment_detailview_img_star"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:background="@drawable/ic_star"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_star"
        android:backgroundTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_detailview_img_potrait"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fragment_detailview_txt_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/text_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_detailview_img_potrait" />

    <TextView
        android:id="@+id/fragment_detailview_txt_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/text_14"
        app:layout_constraintRight_toRightOf="@+id/fragment_detailview_txt_full_name"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_detailview_txt_full_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_detailview_txt_full_name" />

    <TextView
        android:id="@+id/fragment_detailview_txt_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/text_14"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="@+id/fragment_detailview_txt_full_name"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_detailview_txt_full_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_detailview_txt_id" />

</android.support.constraint.ConstraintLayout>